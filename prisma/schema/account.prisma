model Person {
    id        String    @id @default(cuid())
    email     String?   @unique
    firstName String
    lastName  String
    number    String?   @unique
    address   Address?
    addressId String?
    user      User?
    assignee  Assignee?
    clients   Client?
}

model User {
    id             String        @id @default(cuid())
    person         Person        @relation(fields: [personId], references: [id])
    personId       String        @unique
    settings       UserSettings? @relation(fields: [userSettingsId], references: [id])
    admin          Admin?
    userSettingsId String?
}

model Admin {
    id             String  @id @default(cuid())
    user           User    @relation(fields: [userId], references: [id])
    userId         String  @unique
    position       String?
    image          String?
    studies        Study[] @relation("cdp")
    auditedStudies Study[] @relation("auditor")
}

model UserSettings {
    id                String            @id @default(cuid())
    theme             String
    notificationLevel NotificationLevel
    gui               Boolean
    User              User[]
}

enum NotificationLevel {
    Low
    Medium
    High
}

model Address {
    id       String   @id @default(cuid())
    number   String
    street   String
    city     String
    zipCode  String
    country  String
    people   Person   @relation(fields: [personId], references: [id])
    company  Company?
    personId String   @unique
}
